FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 1;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform 1;
        value           uniform 1;
    }

    bottom_fore
    {
        type            slip;
    }

    top_fore
    {
        type            slip;
    }

    bottom_wake
    {
        type            fixedValue;
        value           uniform 1;
    }

    top_wake
    {
        type            fixedValue;
        value           uniform 1;
    }
    
    airfoil
    {
        type            zeroGradient;
    }

    defaultFaces
    {
        type            empty;
    }
}

